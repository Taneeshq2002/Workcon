<%-include("partials/header2");-%>

<div class="loginbox">
  <h2>LOGIN</h2>
  <div class="inputarea">
    <form action="/login" method="post">
      <input
        type="text"
        name="username"
        placeholder="Enter your username"
        autofocus
      />
      <input
        type="text"
        name="password"
        placeholder="Enter your password"
        autofocus
      />

      <button class="btn btn-lg btn-primary btn-block">LOGIN</button>
    </form>
  </div>
  <h3 style="margin-top: 4rem"><%=message%></h3>
  <h4><a href="/register" style="text-decoration: none">New User?</a></h4>
</div>

<%-include("partials/footer");-%>
